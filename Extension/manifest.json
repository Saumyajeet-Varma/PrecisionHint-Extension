{
  "manifest_version": 3,
  "name": "DSA Helper",
  "version": "1.0",
  "description": "Gives helpful hints while solving LeetCode or GfG problems.",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.leetcode.com/problems/*",
        "*://*.geeksforgeeks.org/problems/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*",
    "*://*.geeksforgeeks.org/*"
  ]
}
